pipeline {
    agent any

    options {
        timeout(time: 30, unit: 'MINUTES') // Increase timeout for the entire pipeline
    }

    stages {
        stage('Clean Workspace') {
            steps {
                deleteDir() // Clean the workspace
            }
        }

        stage('Clone Repository') {
            steps {
                script {
                    // Perform a shallow clone to reduce the repository size and time
                    checkout([$class: 'GitSCM', 
                              branches: [[name: '*/master']], 
                              userRemoteConfigs: [[url: 'https://github.com/vinodravi84/DETECTAI.git', depth: 1]]])
                }
            }
        }

        stage('Build') {
            steps {
                // Add your build steps here, for example:
                echo 'Building the project...'
                // sh './build.sh'
            }
        }

        stage('Deploy') {
            steps {
                // Add your deploy steps here, for example:
                echo 'Deploying the project...'
                // sh './deploy.sh'
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
