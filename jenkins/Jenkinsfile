pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'docker version'
                    sh 'chmod +x jenkins/scripts/build.sh'
                    sh './jenkins/scripts/build.sh'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'chmod +x jenkins/scripts/deploy.sh'
                    sh './jenkins/scripts/deploy.sh'
                }
            }
        }
    }
}
